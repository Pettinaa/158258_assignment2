@model WebApplication222222.ViewModels.CharacterIndexViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<style>

    body {
        margin: 0;
        padding: 0;
        margin-top: 200px;
        background-image: url("/wwwroot/image/warm3.png");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        position: relative; /* 使 ::before 伪元素相对于 body 元素定位 */
    }

        body::before {
            content: "";
            background-image: url("/wwwroot/image/warm3.png");
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(5px); /* 调整虚化程度 */
            z-index: -1;
        }


    /* 其他样式不变，只是添加了上述 ::before 伪元素的设置 */



    /* 剩余的 CSS 样式代码保持不变 */


    /* 剩余的 CSS 样式代码保持不变 */



    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px; /* 添加外边距 */
    }

        .table th, .table td {
            border: 1px solid #fff; /* 设置边框颜色为白色 */
            padding: 8px;
            text-align: left;
            color: #fdf1e7; /* 将文字颜色更改为米黄色 */
            font-weight: bold; /* 设置文字为加粗 */
        }

        .table th {
            background-color: rgba(186, 174, 182, 0.7); /* 设置背景颜色带透明度 */
            color: #4a2507; /* 修改文字颜色为米黄色 */
        }

        .table tr {
            background-color: transparent; /* 设置背景色为透明 */
        }

            .table tr:nth-child(even) {
                background-color: rgba(166, 124, 82, 0.01); /* 修改偶数行的背景颜色为偏棕褐色，带透明度 */
            }

            .table tr:hover {
                background-color: rgba(204, 204, 204, 0.4); /* 修改鼠标悬停行的背景颜色，增加透明度 */
            }


    /* footer */

    footer {
        background-color: #333;
        color: #f9f9f9;
        padding: 20px;
        text-align: center;
    }
    /*
    .clear {
        clear: both;
    } */

    /* map */

    #container {
        width: 100%; /* Make the map container responsive */
        padding-bottom: 100%; /* Set the aspect ratio of the map container (1:1 in this case) */
        position: relative; /* Required for padding-bottom to work */
        border: #c3f0f5 solid 5px;
        border-radius: 5%;
    }

    .location {
        margin-left: 15%;
        margin-bottom: 5%;
        margin-top: -20%;
        width: 25%;
    }

    /* word */

    .contact-info {
        position: absolute;
        margin-top: 8%;
        margin-left: 45%;
        color: #fff;
        font-size: larger;
        text-decoration:none;
    }

    .info {
        margin-bottom: 10px; /* 可以根据需要调整间距 */
    }

    .label {
        font-weight: bold;
        color: rgb(79, 165, 251);
    }

    .value {
        margin-left: 10px; /* 可以根据需要调整间距 */
    }

    .contact-info :last-child {
        font-weight: bold;
    }

    .HoYo:hover {
        color: dodgerblue;
        font-size: larger;
        transition: all 1s;
    }

    /* board */

    .message-board {
        width: 30%;
        margin-top: 18%;
        margin-left: 45%;
        background-color: rgb(73, 153, 234);
        padding: 1%;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h4 {
        text-align: center;
        color: aliceblue;
    }

    .message-input {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    #message {
        width: 70%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 10px;
    }

    #submit {
        background-color: rgb(19, 85, 198);
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 10px;
    }

    .message-list {
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .message-list li {
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin: 10px 0;
        }
    /* icon */

    .social-media {
        position: absolute;
        left: 10%;
    }


        .social-media a img {
            /* float: left; */
            width: 4%;
            height: 4%;
            margin-top: -8%;
            margin-right: 1ex;
        }

    /* 分页容器样式 */
    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin-top: 50px;
        margin-bottom: 50px;
        margin-left: 35%;
    }

        /* 分页项样式 */
        .pagination li {
            margin: 0 5px;
        }

        /* 激活状态样式 */
        .pagination .active {
            color: #fff; /* 将文字颜色更改为白色 */
            border-radius: 4px;
        }

        /* 分页链接样式 */
        .pagination a {
            text-decoration: none;
            color: #fff; /* 将文字颜色更改为白色 */
            border: 1px solid #fff; /* 将边框颜色更改为白色 */
            border-radius: 4px;
            padding: 5px 10px;
        }

            /* 分页链接悬停状态样式 */
            .pagination a:hover {
                background-color: #fff; /* 修改背景颜色为白色 */
                color: #007bff; /* 修改文字颜色为蓝色 */
            }



    /* Style for the filter-form container */
    .filter-form {
       
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        /* Style for the paragraph inside filter-form */
        .filter-form p {
            font-size: 18px;
            color: #333;
            margin-bottom: 15px;
        }

        /* Style for form labels */
        .filter-form label {
            font-weight: bold;
            margin-right: 10px;
            color: aliceblue;
            line-height: 3px; /* 设置合适的值来垂直居中文字 */
        }


        /* Style for form select elements */
        .filter-form select {
            padding: 10px; /* 增加垂直内边距，提高下拉框的高度 */
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: antiquewhite;
            color: darkcyan;
            height: 40px; /* 设置下拉框的高度，与按钮高度一致 */
        }

        /* Style for the filter button */
        .filter-form button {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            padding: 5px 20px;
            cursor: pointer;
            font-weight: bold;
            height: 40px; /* 设置按钮的高度，与下拉框高度一致 */
        }



            /* Style for the filter button on hover */
            .filter-form button:hover {
                background-color: #0056b3;
            }

        /* Style to align form elements in a row */
        .filter-form .form-group {
            display: inline-block;
            margin-right: 10px;
        }

        /* Style for the hidden form element */
        .filter-form input[type="hidden"] {
            display: none;
        }
        



    /* Style to remove color and underline from the link with class 'no-style-link' */
    .no-style-link {
        color: inherit; /* 使用继承的颜色 */
        text-decoration: none; /* 去掉下划线 */
    }

    .character-intro {
        font-size: 18px; /* 设置字体大小 */
        line-height: 1.4; /* 设置行高 */
        margin-bottom: 20px; /* 设置底边距 */
        color: aliceblue; /* 设置文本颜色 */
        background-color: rgba(166, 124, 82, 0.3); /* 设置背景颜色 */
        padding: 30px; /* 设置内边距 */
        border: 1px solid #ccc; /* 添加边框 */
        border-radius: 3%;
        width: 35%;
        margin-left: 54%;
        margin-top: 7%;
        margin-bottom:10%;
    
   }

    .ying img {
        width: 30%;
        height: 40%;
        float: left;
        margin-left: 5%;
        margin-top: -5%;
    }
    .kong img {
        width: 30%;
        height: 40%;
        float: left;
        margin-left: -13%;
        margin-top: -8%;
    }


</style>

<body>
    <h2><br></h2>

    <div class="ying">
        <img src="~/wwwroot/image/ying.png" alt="ying">
    </div>

    <div class="kong">
        <img src="~/wwwroot/image/kong.png" alt="kong">
    </div>



    <h4 class="character-intro">
        There are a lot of characters in the Genshin Impact game. The characters are
        divided into several camps. There are seven elements: Pyro, Hydro, Anemo, Electro, Dendro, Cryo,
        and Geo. Each character has its own unique skills. At present, there are 72 actual characters
        included in the atlas, including 39 five-star characters and 33 four-star characters.
    </h4>


    <div class="filter-form">
        <p>
            @(String.IsNullOrWhiteSpace(Model.Search) ? "Showing all" : "You search for " + Model.Search + " found") @Model.Characters.TotalItemCount character
        </p>

        @using (Html.BeginForm("Index", "Characters", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label for="Element">Filter by Element:</label>
                @Html.DropDownListFor(vm => vm.Element, Model.CatFilterItems, "All", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="SortBy">Sort By:</label>
                @Html.DropDownListFor(vm => vm.SortBy, new SelectList(Model.Sorts, "Value", "Key"), "Default", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>

            @Html.HiddenFor(vm => vm.Search)
        }
    </div>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Element)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters.First().Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters.First().Rerun)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Characters)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Element.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rerun)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "no-style-link" })
                </td>

            </tr>
        }

    </table>

    <div>
        Page @(Model.Characters.PageCount < Model.Characters.PageNumber ? 0 : Model.Characters.PageNumber) of @Model.Characters.PageCount
        @Html.PagedListPager(Model.Characters, page => Url.Action("Index", new
        {
        element = @Model.Element,
        Search = @Model.Search,
        sortBy = @Model.SortBy,
        page
        }))
    </div>



    <!-- footer -->
    <footer>

        <!-- word -->
        <div class="contact-info">
            <div class="info">
                <a class="label">Email</a>
                <a class="value">13611451958@qq.com</a>
            </div>

            <div class="info">
                <a class="label">Phone number</a>
                <a class="value">+86-10-43-62</a>
            </div>

            <div class="info">
                <a class="value HoYo">HoYoverse  </a>
            </div>

        </div>

        <!-- message board -->
        <div class="message-board">
            <h4>message board</h4>
            <div class="message-input">
                <input type="text" id="message" placeholder="typing some words here">
                <button id="submit">submit</button>
            </div>
            <ul class="message-list" id="message-list">
                <!-- 留言将在这里显示 -->
            </ul>
            <!-- 显示提交成功消息的部分 -->
            <div id="successMessage" style="display: none;"></div>
        </div>
        <script src="~/wwwroot/js/board.js"></script>


        <!-- map -->
        <div class="location">
            <!-- use Baidu Maps insert map-->
            <div id="container"></div>
            <script>
                var map = new BMapGL.Map("container");
                var point = new BMapGL.Point(121.423258, 31.182332);
                map.centerAndZoom(point, 18);
                map.enableScrollWheelZoom(true);
                map.addControl(new BMap.NavigationControl())
                map.addControl(new BMap.OverviewMapControl());
                map.addControl(new BMap.LocationControl());

            </script>


            <!-- icon -->
        </div>
        <div class="social-media">
            <!-- icon of social media and some links -->
            <a href="https://www.facebook.com"><img src="~/wwwroot/image/Facebook.png" alt="Facebook"></a>
            <a href="https://www.instagram.com"><img src="~/wwwroot/image/Instagram.png" alt="Instagram"></a>
            <a href="https://www.twitter.com"><img src="~/wwwroot/image/Twitter.png" alt="Twitter"></a>
            <a href="https://www.youtube.com"><img src="~/wwwroot/image/YouTube.png" alt="YouTube"></a>
        </div>
        <div class="clear"></div>
    </footer>


</body>

