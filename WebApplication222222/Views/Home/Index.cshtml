@{
    ViewBag.Title = "GenshinImpact";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- add links of CSS and JavaScript and Fonts-->
    <link rel="stylesheet" href="~/wwwroot/css/Index.css">
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@500;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- js -->
    <script type="text/javascript" src="https://api.map.baidu.com/api?v=1.0&&type=webgl&ak=SS8266fxEG4qZ6AHRc8pI5NwncqpVq08">
    </script>
</head>
<body>




    <!-- pictures -->
    <div class="slideshow-container">
        <div class="mySlides fade">
            <img src="~/wwwroot/image/p1.png" alt="Image 1" width="100%" height="100%">
        </div>
        <div class="mySlides fade">
            <img src="~/wwwroot/image/p2.jpg" alt="Image 2" width="100%" height="100%">
        </div>
        <div class="mySlides fade">
            <img src="~/wwwroot/image/p3.jpg" alt="Image 3" width="100%" height="100%">
        </div>
        <div class="mySlides fade">
            <img src="~/wwwroot/image/p4.jpg" alt="Image 4" width="100%" height="100%">
        </div>
        <div class="mySlides fade">
            <img src="~/wwwroot/image/p5.jpg" alt="Image 5" width="100%" height="100%">
        </div>
    </div>
    <script src="~/wwwroot/js/slide.js"></script>


    <!-- video -->

    <div class="show-video">
        <img src="~/wwwroot/image/on.png" class="video-icon" aria-hidden="true" id="playButton">
    </div>
    <div id="videoContainer" class="video-container">
        <video id="myVideo" controls="controls" loop width="650" height="360">
            <source src="~/wwwroot/video/intro.mp4" type="video/mp4">
        </video>
        <span id="closeButton" class="close-button">X</span>
    </div>



    <script>
        var videoContainer = document.getElementById("videoContainer");
        var video = document.getElementById("myVideo");
        var playButton = document.getElementById("playButton");
        var closeButton = document.getElementById("closeButton");

        // 默认情况下，视频和视频容器都不可见
        videoContainer.style.display = "none";
        video.style.display = "none";

        playButton.addEventListener("click", function () {
            videoContainer.style.display = "block";
            video.style.display = "block";
            video.play();
        });

        closeButton.addEventListener("click", function () {
            videoContainer.style.display = "none";
            video.style.display = "none";
            video.pause();
        });


    </script>

    <!-- footer -->
    <footer>

        <!-- word -->
        <div class="contact-info">
            <div class="info">
                <a class="label">Email</a>
                <a class="value">13611451958@qq.com</a>
            </div>

            <div class="info">
                <a class="label">Phone number</a>
                <a class="value">+86-10-43-62</a>
            </div>

            <div class="info">
                <a class="value HoYo">HoYoverse</a>
            </div>

        </div>

        <!-- message board -->
        <div class="message-board">
            <h4>message board</h4>
            <div class="message-input">
                <input type="text" id="message" placeholder="typing some words here">
                <button id="submit">submit</button>
            </div>
            <ul class="message-list" id="message-list">
                <!-- 留言将在这里显示 -->
            </ul>
            <!-- 显示提交成功消息的部分 -->
            <div id="successMessage" style="display: none;"></div>
        </div>
        <script src="~/wwwroot/js/board.js"></script>


        <!-- map -->
        <div class="location">
            <!-- use Baidu Maps insert map-->
            <div id="container"></div>
            <script>
                var map = new BMapGL.Map("container");
                var point = new BMapGL.Point(121.423258, 31.182332);
                map.centerAndZoom(point, 18);
                map.enableScrollWheelZoom(true);
                map.addControl(new BMap.NavigationControl())
                map.addControl(new BMap.OverviewMapControl());
                map.addControl(new BMap.LocationControl());

            </script>


            <!-- icon -->
        </div>
        <div class="social-media">
            <!-- icon of social media and some links -->
            <a href="https://www.facebook.com"><img src="~/wwwroot/image/Facebook.png" alt="Facebook"></a>
            <a href="https://www.instagram.com"><img src="~/wwwroot/image/Instagram.png" alt="Instagram"></a>
            <a href="https://www.twitter.com"><img src="~/wwwroot/image/Twitter.png" alt="Twitter"></a>
            <a href="https://www.youtube.com"><img src="~/wwwroot/image/YouTube.png" alt="YouTube"></a>
        </div>
        <div class="clear"></div>
    </footer>



</body>
</html>
